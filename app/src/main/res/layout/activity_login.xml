<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@drawable/background2"
    android:fillViewport="false"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/nbelogo"
        android:id="@+id/nbe_logo"/>


    <TextView
        android:background="@drawable/background3"
        android:id="@+id/login_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nbe_logo"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="36dp"
        android:text="Login"
        android:textColor="#ffff971f" />

    <RelativeLayout
        android:layout_above="@+id/button_back"
        android:layout_width="match_parent"
        android:layout_below="@+id/login_text"
        android:layout_height="wrap_content"
        android:gravity="center">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Relative"
            >

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background5"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/usernamelinear"
                >


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:hint="Phone "
                    android:layout_weight="3"
                    android:id="@+id/phonebox"
                    android:textColor="#f9000000"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:background="#ffffffff"
                    android:paddingLeft="5dp"
                    android:layout_margin="10dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background5"
                android:layout_below="@+id/usernamelinear"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/passwordlinear"
                >

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:hint="password"
                    android:layout_weight="3"
                    android:id="@+id/passwordbox"
                    android:layout_marginTop="10dp"
                    android:textColor="#f9000000"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:background="#ffffffff"
                    android:layout_margin="10dp"
                    android:paddingLeft="5dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/passwordlinear"
                android:gravity="center"
                android:id="@+id/login_linear">
                <Button
                    android:id="@+id/submit_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background2"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="LOGIN"
                    android:textColor="#ffff971f"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:background="@drawable/background4"
        android:id="@+id/button_back"

        />
</RelativeLayout>

